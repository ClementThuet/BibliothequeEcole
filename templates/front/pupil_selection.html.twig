{% extends 'baseFront.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="title-h1">Qui es-tu ?</h1>
                <div class="pupils-container">
                    <div class="row">
                    {%for pupil in pupils %}
                        <div class="col-lg-2 pupil-picture-container">
                            {% if pupil.image.url is defined and pupil.image.url is not null %}
                                <a href="{{path('select_pupil_borrow',{'idPupil':pupil.id})}}">
                                    <img class="pupil-picture" src="{{pupil.image.url}}" alt="{{pupil.image.alt}}">
                                </a>
                            {% else %}
                                <img class="pupil-picture" src="/BEB/public/img/default-pupil.jpg" alt="{{pupil.nom}} {{pupil.prenom}}"> 
                                <h4>{{pupil.nom}} {{pupil.prenom}}</h4>
                            {%endif%}
                        </div>
                    {%endfor%}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}