{% extends 'baseFront.html.twig' %}
{% block title %}Choix du livre{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="title-h1"> Choix du livre</h1>
                <div class="row">
                    {%for book in books %}
                        <div class=" book-picture-container">
                            <a href="{{path('select_book_borrow',{'idPupil':pupil.id, 'idBook':book.id})}}">
                                 <div class="book-picture-select" >
                                     {% if book.image.url is defined and book.image.url is not null %}
                                         <img class="book-picture" src="{{book.image.url}}" alt="{{book.image.alt}}">  
                                     {% else %}
                                         <img class="book-picture" src="/BEB/public/img/default-book.png" alt="Image par dÃ©faut">  
                                     {%endif%}
                                 </div>
                             </a>
                        </div>
                    {%endfor%}
                </div>
                <div class="bt_return">
                    <a href="{{path('index')}}"> 
                        <svg class="bi bi-arrow-return-left" width="" height="" viewBox="0 0 16 16" fill="red" xmlns="http://www.w3.org/2000/svg">
