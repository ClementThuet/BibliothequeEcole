{% extends 'baseFront.html.twig' %}
{% block title %}Choix du livre{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="title-h1"> Retour du livre</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-6 flex">
                <div class="book-return-picture-container" >
                    {% if book.image.url is defined and book.image.url is not null %}
                        <img class="book-return-picture" src="{{book.image.url}}" alt="{{book.image.alt}}">  
                    {% else %}
                        <img class="book-return-picture" src="/BEB/public/img/default-book.png" alt="Image par défaut}">  
                    {%endif%}
                    <h3>{{book.title}}</h3>
                </div>
            </div> 
            <div class="col-6 flex">
                <div class="book-return-picture-container" >
                    {% if pupil.image.url is defined and pupil.image.url is not null %}
                        <img class="book-return-picture" src="{{pupil.image.url}}" alt="{{pupil.image.alt}}">  
                    {% else %}
                         <img class="book-return-picture" src="/BEB/public/img/default-pupil.jpg" alt="Image par défaut">  
                    {%endif%}
                    <h3>{{pupil.firstName}} {{pupil.lastName}}</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <div class="code-input-container">
                {{ form_start(form) }}
                <div>
                    {{ form_errors(form) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.code, "Code :", {'label_attr': {'class': 'form-label-code'}}) }}
                    {{ form_widget(form.code) }}
                </div>
                <button type="submit" class="btn btn-primary">Valider</button>
                 {{ form_end(form) }}
            </div>
        
        </div>
        
        <div class="bt_return">
            <a href="{{path('index')}}"> 
                <svg class="bi bi-arrow-return-left" width="" height="" viewBox="0 0 16 16" fill="red" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M5.854 5.646a.5.5 0 010 .708L3.207 9l2.647 2.646a.5.5 0 01-.708.708l-3-3a.5.5 0 010-.708l3-3a.5.5 0 01.708 0z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M13.5 2.5a.5.5 0 01.5.5v4a2.5 2.5 0 01-2.5 2.5H3a.5.5 0 010-1h8.5A1.5 1.5 0 0013 7V3a.5.5 0 01.5-.5z" clip-rule="evenodd"/>
                </svg>  
            </a>
        </div>
            
        
    </div>
{% endblock %}