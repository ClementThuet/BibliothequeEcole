{% extends 'base.html.twig' %}
{% block title %}Ajouter un livre{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1> Ajouter un livre</h1>
                {{ form_start(form) }}
                <div>
                    {{ form_errors(form) }}
                </div>
               <div class="form-group">
                    {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.author, 'Auteur', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                </div>   
                <div class="form-group">
                    {{ form_label(form.theme, 'Thème', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.theme, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.sommary, 'Résumé', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.sommary, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.releaseDate, 'Date de parution', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.releaseDate, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.originalLibrary, "Bibliothèque d'origine", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.originalLibrary, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.image, "Image ", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.image) }}
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
{% endblock %}