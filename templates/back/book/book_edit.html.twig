{% extends 'base.html.twig' %}
{% block title %}Modifier {{book.title}}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1> Modifier {{book.title}}</h1>
                {{ form_start(form) }}
                <div>
                    {{ form_errors(form) }}
                </div>
               <div class="form-group">
                    {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.author, 'Auteur', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                </div>   
                <div class="form-group">
                    {{ form_label(form.theme, 'Thème', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.theme, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.sommary, 'Résumé', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.sommary, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.releaseDate, 'Date de parution', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.releaseDate, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.originalLibrary, "Bibliothèque d'origine", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.originalLibrary, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.image, "Image ", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.image) }}
                </div>
                {% if book.image.url is defined and book.image.url is not null %}
                    <img style="width:15vw;" src="{{book.image.url}}" alt="{{book.image.alt}}">
                {%endif%}
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{path('book_delete',{'idBook':book.id})}}"<button class="btn btn-danger">Supprimer</button></a>
            </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
{% endblock %}